<div style="width: 30rem;" class="mt-3">
<h5 style="text-align: center;font-size: 2rem;">Product</h5>
<form method="POST" action="/edit-products/{{this.product._id}}">
    <div class="form-group">
        <label for="recipient-name" class="col-form-label">Product Name</label>
        <input type="text" class="form-control" id="recipient-name" name="productname"
            value="{{this.product.productname}}" required>
    </div>
    <div class="form-group">
        <label for="message-text" class="col-form-label">Product Price</label>
        <input type="number" class="form-control" id="recipient-name" name="productprice"
            value="{{this.product.productprice}}" required>
    </div>
    <div class="modal-footer">
        <input type="submit" value="Update" class="btn btn-primary">
    </div>
</form>
</div>