<div style="width: 30rem;" class="mt-3">
    <h5 style="text-align: center;font-size: 2rem;">Route</h5>
    <form method="POST" action="/edit-route/{{this.route._id}}">
        <div class="form-group">
            <label for="recipient-name" class="col-form-label">Route Name</label>
            <input type="text" class="form-control" name="routename" value="{{this.route.routename}}" required>
        </div>
        <div class="form-group">
            <label for="message-text" class="col-form-label">Distributer</label>
            <input type="text" class="form-control" name="distributername" value="{{this.route.distributername}}"
                required>
        </div>
        <div class="form-group">
            <label for="message-text" class="col-form-label">Mobile Number</label>
            <input type="number" class="form-control" name="distributernumber" value="{{this.route.distributernumber}}">
        </div>
        <div class="modal-footer">
            <input type="submit" value="save" class="btn btn-primary">
        </div>
    </form>
</div>