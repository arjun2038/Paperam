<div class="container">
    <div class="row mt-3">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Products</th>
                    <th scope="col">Bill Amount</th>
                    <th scope="col">Payment</th>
                    <th scope="col">Total</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>{{#each customers}}
                <tr>
                    <td>{{@index}}</td>
                    <td>{{this.customername}}</td>
                    <td>{{this.product}}</td>
                    <td>{{this.previousamount}}</td>
                    <td>{{this.productprice}}</td>
                    <td>{{this.total}}</td>

                    <td>
                        <a href="/edit-bill/{{this._id}}" class="btn btn-primary">Edit</a>
                    </td>
                    <td><a href="/delete-bill/{{this._id}} " class="btn btn-danger">Delete</a></td>
                </tr>
                {{/each}}

            </tbody>

        </table>
    </div>
</div>